@stage "design";
@environment "test";
@clevel "system";
@language "cola";
@spec "cola2est";

//function myTestFunc: @language="java" @return(string) parameter([string arg1] [boolean arg2] [char[] arg3]);

property myTestProperty1: @type(boolean = TRUE)
  @scope([package:required] [element:mandatory] [facility:optional]
         [action:not_def] [attribute:not_def] [parameter:not_def])
  @apply(inv)
  @description("http://www.vandermeer.de/mama/doc/q/abstract.php");

property myTestProperty2: @type(string = "")
  @scope([package:required] [element:mandatory] [facility:optional]
         [action:not_def] [attribute:not_def] [parameter:not_def])
  @apply(inv)
  @description("http://www.vandermeer.de/mama/doc/q/abstract.php");



contract myTestContract1:
	@scope([element:required] [facility:optional])
	@description("that is the car I want")
	item Misc{
	  [Colour: @type(string="c1") @rank(optional) @apply(post) @description("###") @priority(octet=0755)]
	}
	item Price{
	  [Amount: @type(integer=1) @rank(required) @apply(pre) @negotiable @description("###") @priority(octet=0755)],
	  [Unit:   @type(string="dollar") @rank(required) @apply(pre) @negotiable @description("###") @priority(octet=0755)]
    }
;

contract myTestContract2:
	@scope([element:optional] [facility:optional])
	@description("that is the car I want")
	item Misc{
	  [Colour: @type(string="c1") @rank(optional) @apply(post) @description("###") @priority(octet=0755)]
	}
	item Price{
	  [Amount: @type(integer=1) @rank(required) @apply(pre) @negotiable @description("###") @priority(octet=0755)],
	  [Unit:   @type(string="dollar") @rank(required) @apply(pre) @negotiable @description("###") @priority(octet=0755)]
    }
;


[
 myTestProperty1 mtp1(FALSE),
 myTestProperty2 mtp2("###")
]
[[
  {myTestContract1 c1 = Price[Amount amount(2), Unit unit("euro")], Misc[Colour colour("red")]},
  {myTestContract2 c2 = Price[Amount amount(0)], Misc[Colour colour("red")]}
]]

element oManager {}