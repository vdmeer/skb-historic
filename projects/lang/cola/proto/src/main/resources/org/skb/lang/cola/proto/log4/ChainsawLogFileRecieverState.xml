<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd"> 
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">

   <plugin name="logFileReceiver" class="org.apache.log4j.varia.LogFilePatternReceiver">
     <param name="fileURL" value="file:///v:/cola.log" />
     <param name="timestampFormat" value="yyyy-MM-d HH:mm:ss,SSS"/> 
     <param name="logFormat" value="LOGGER TIMESTAMP LEVEL [THREAD] CLASS (FILE=METHOD:LINE) - MESSAGE"/> 
     <param name="name" value="SKB Logger" />
     <param name="tailing" value="true" /> 
   </plugin>

