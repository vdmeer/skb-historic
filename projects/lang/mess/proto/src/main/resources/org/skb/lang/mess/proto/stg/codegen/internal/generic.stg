group codegen;

/* Code Generation Templates, not for export! */
std(source, target, file, day, time, misc) ::= <<
$if(target.mess)$$mlCommentStartStar()$$elseif(target.java)$$mlCommentStartStar()$$elseif(target.php)$$mlCommentStartStar()$$elseif(target.xml)$$mlCommentStartXml()$$elseif(target.rasn2)$$mlCommentStartStar()$$elseif(target.sql)$$mlCommentStartStar()$
$endif$
 *  generated by MESS, (c) 2011-2011 Sven van der Meer <sven@vandermeer.de>
 *  generated from $source$ for $file$ on $day$ at $time$
$if(target.mess)$ $mlCommentEndStar()$$\n$$elseif(target.java)$ $mlCommentEndStar()$$\n$$elseif(target.php)$ $mlCommentEndStar()$$\n$$elseif(target.xml)$ $mlCommentEndXml()$$\n$$elseif(target.rasn2)$ $mlCommentEndStar()$$\n$$elseif(target.sql)$ $mlCommentEndStar()$$\n$
$endif$

$if(target.java)$
$if(misc.package)$
package $misc.package$;$\n$$\n$
$endif$
$endif$
>>

mlCommentStartStar(dummy) ::= "/*
"
mlCommentEndStar(dummy) ::= "*/"

mlCommentStartXml(dummy) ::= "<!--"
mlCommentEndXml(dummy) ::= "-->"


fImport(target, import) ::= <<
$if(target.mess)$#include "$fImport; separator="\n"$"
$elseif(target.java)$$[import]:{ v | import $v$;$\n$}$
$elseif(target.php)$$[import]:{ v | requires($v$);$\n$}$
$endif$
$\n$
>>

fileStart(target) ::= <<
$if(target.php)$<?php$\n$$endif$
>>

fileEnd(target) ::= <<
$if(target.php)$?>$\n$$endif$
>>
